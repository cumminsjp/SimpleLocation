<?xml version="1.0" encoding="utf-8"?>
<package >
    <metadata>
        <id>SimpleLocation</id>
        <version>0.1.9</version>
        <authors>Perpetual Mobile GmbH</authors>
        <owners>Perpetual Mobile GmbH</owners>
		    <projectUrl>https://github.com/perpetual-mobile/SimpleLocation</projectUrl>
        <licenseUrl>https://github.com/perpetual-mobile/SimpleLocation/blob/master/License.md</licenseUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Simple platform independent location manager for iOS and Android (Xamarin)</description>
        <releaseNotes>
            Version 0.1.9
              - [Android] Added option to hide "Never"-button on "Use Location"-dialog
              - [Android] Added option to show "Use Location"-dialog once or always when triggered
              - [Android] Fixed bug where LocationUpdatesStarted event was not called
              - [iOS] Prevent automatic location updates on app start
              - Moved some logging to shared code
        </releaseNotes>
        <copyright>Copyright 2015</copyright>
        <tags>location geolocation latitude longitude cross-platform ios android xamarin</tags>
        <dependencies>
            <group targetFramework="MonoAndroid">
                <dependency id="Xamarin.Android.Support.v4" version="22.2.1.0" />
                <dependency id="Xamarin.Android.Support.v7.AppCompat" version="22.2.1.0" />
                <dependency id="Xamarin.Android.Support.v7.MediaRouter" version="22.2.1.0" />
                <dependency id="Xamarin.GooglePlayServices.Base" version="25.0.0.0" />
                <dependency id="Xamarin.GooglePlayServices.Maps" version="25.0.0.0" />
                <dependency id="Xamarin.GooglePlayServices.Location" version="25.0.0.0" />
            </group>
        </dependencies>
    </metadata>
    <files>
        <file src="Droid/bin/Release/SimpleLocation.Droid.dll" target="lib\MonoAndroid" />
        <file src="iOS/bin/Release/SimpleLocation.iOS.dll" target="lib\Xamarin.iOS10" />
    </files>
</package>
